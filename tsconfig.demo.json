{
    "angularCompilerOptions": {
        "genDir": "demo/ngfactory"
    },
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "src/**/*.ts",
        "demo/src/**/*.ts"
    ]
}